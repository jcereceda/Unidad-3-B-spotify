<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_marginTop="15dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@color/graySpoty">
    <ImageView
        android:id="@+id/imgAlbum"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/nombreCancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de la cacion"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        app:layout_constraintLeft_toRightOf="@+id/imgAlbum"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/nombreGrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del grupo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/nombreCancion"
        app:layout_constraintLeft_toRightOf="@+id/imgAlbum"
        />
    <ImageView
        android:id="@+id/favourite"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_corazon_vacio"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="80dp"
        android:clickable="true"
        android:paddingTop="18dp"
        tools:ignore="MissingConstraints"/>
</androidx.constraintlayout.widget.ConstraintLayout>